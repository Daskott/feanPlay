.flip {
   max-width: 350px;
   height: 200px;
   padding:8px;
   text-align:center;
   margin-left:auto;
   margin-right:auto;
}

.flip .card {
  width: 100%;
  height: 100%;
}
.flip .card .face {
  width: 100%;
  height: 100%;
  padding:8px;
  z-index: 2;
  font-size: 1em;
  text-align: center;
  display: table;
  text-align: center;
}
.flip .card .front {
  font-family: 'Roboto Slab', serif;
  position: absolute;
  z-index: 1;
  background: #34495e;
  color: white;
  cursor: pointer;
}
.flip .card .back {
   font-family: 'Roboto Slab', serif;
   background: blue;
   background: white;
   color: black;
   cursor: pointer;
}
.k-card-content{
  display: table-cell;
  vertical-align: middle;
}

.k-ans-text,
.k-quest-text{
  font-size: 0.7em;
  border-radius:4px;
  padding:4px;
  padding-right:8px;
  padding-left:8px;
}
.k-ans-text{
  background-color:#fff;
  color:#2c3e50;
}


