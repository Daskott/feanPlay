handleColor = green
back-grey = #EEEEEE
dark-grey = #E0E0E0
purple = #303F9F;

/********************************
* All Pages
********************************/
h1{
  color:handleColor;
}
.marginTop
{
	margin:10px;
}
.brand-name{
  color:handleColor;
}
body{background-color:back-grey}


/********************************
* Post Page
********************************/
.home-item{
  color:black;
}
.handle
{
	color:handleColor;
}
.post-container{
  margin:auto;
  max-width:700px;
  min-width:300px;
}
.post-panel
{
  padding:16px;
  background-color:dark-grey;
}
.post-button{
    margin-top:8px;
}

p { word-break: break-all }


/********************************
* Login Page
*********************************/
#register-title,
#login-title{
  color:#616161;
  margin-bottom:16px;
}
.register-pane,
.login-pane{
  padding:20px 30px;
  background:#fff;
  border-radius:2%;
  margin:auto;
  max-width:400px;
  min-width:300px;
  box-shadow: 0 -1px 0 #B6B6B6 inset;
}

.signup-pane{
  margin-top: 16px;
  margin-left:auto;
  margin-right:auto;
  text-align:center;
}
.signup-link{
  color:handleColor;
}

input[type="text"],
input[type="email"],
input[type="password"]
{
  /*background: rgba(255,255,255,0.1);*/
  font-family: 'Roboto Slab', serif;
  border: none;
  font-size: 16px;
  height: auto;
  margin: 0;
  outline: 0;
  padding: 12px;
  width: 100%;
  background-color:#ECECEC;
  color: #8a97a0;
  border-radius: 5px;
  box-shadow: 0 1px 0 rgba(0,0,0,0.03) inset;
  margin-bottom: 30px;
}
