.flip {
   min-width: 200px;
   max-width: 300px;
   padding:8px;
   text-align:center;
   margin-left:auto;
   margin-right:auto;
}

.flip .card {
  width: 100%;
  height: 100%;
  padding:0;
  margin:0;
}
.flip .card .face {
  width: 100%;
  height: 100%;
  padding:8px;
  z-index: 2;
  font-size: 1em;
  text-align: center;
}
.flip .card .front {
  font-family: 'Roboto Slab', serif;
  text-shadow: 0.5px 0px text-grey;
  z-index: 1;
  background: #1abc9c;
  color: white;
  cursor: pointer;
}
.flip .card .back {
   font-family: 'Roboto Slab', serif;
   background: blue;
   background: white;
   color: black;
   cursor: pointer;
}
